{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "code-monkey-ts/node_modules"]
    },
    "types": ["jest", "node"],
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": ["code-monkey-ts/**/*"],
  "exclude": ["node_modules", "dist", "jest.config.js"]
}
